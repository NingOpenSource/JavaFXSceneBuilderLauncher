<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="AnchorPane" onDragDropped="#onDragDropped" style="-fx-background-color: gray;" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ning.javafx.scenebuilder.app.ui.MainContentController">
    <stylesheets>
        <URL value="@maincontent.css" />
    </stylesheets>
   <center>
      <VBox layoutX="155.0" scaleZ="5.0" style="-fx-background-color: white;">
         <children>
            <BorderPane>
               <center>
                  <Button mnemonicParsing="false" onAction="#launchNow" prefWidth="600.0" text="Launch Now" BorderPane.alignment="CENTER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </center>
            </BorderPane>
            <BorderPane>
               <center>
                  <Button mnemonicParsing="false" onAction="#selectFileAndLaunch" prefWidth="600.0" text="Launch From a fxml document" BorderPane.alignment="CENTER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </center>
            </BorderPane>
            <BorderPane>
               <center>
                  <Button mnemonicParsing="false" onAction="#associateFxmlDocument" prefWidth="600.0" text="Associate * .fxml files（Only on Windows）" BorderPane.alignment="CENTER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </center>
            </BorderPane>
            <BorderPane onDragDropped="#onDragDropped" onDragOver="#onDragOver" prefWidth="400.0" style="-fx-background-color: #fbfbfb; -fx-background-radius: 5; -fx-border-color: #cecece; -fx-border-radius: 5;">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <center>
                  <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../fxml-128.png" />
                           </image>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" onDragDropped="#onDragDropped" onDragOver="#onDragOver" text="pelase drag and drop *.fxml into this textArea" />
                     </children>
                  </VBox>
               </center>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </BorderPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
